#include <stdio.h>
int main() {
	int cnt,cnt1=1,cnt2 = 1;
	printf("第一个月：%d\n",cnt1);
	printf("第二个月：%d\n",cnt2);
	for (int i = 3; i < 41; i++)
	{
		cnt = cnt1 + cnt2;
		printf("第%d个月：%d\n",i,cnt);
		cnt1 = cnt2;
		cnt2 = cnt;
	}
	      return 0;
	}
     //程序分析：兔子的规律为数列1,1,2,3,5,8,13,21....，即下个月是上两个月之和（从第三个月开始）
